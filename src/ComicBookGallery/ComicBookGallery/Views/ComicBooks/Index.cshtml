@model ComicBookGallery.Models.ComicBook[];


<div container="container-fluid pt-3">

    

    <div class="row">
        @foreach( ComicBook book in Model)
          {
              <div class="col-md-3">
                      <h4>@Html.ActionLink(book.DisplayText,"Detail","ComicBooks",new { id = book.Id })</h4>
                       <a href="@Url.Action("Detail", new { id = book.Id} )">
                            <img src="/Images/@book.CoverImageFileName" alt="@book.DisplayText" class="img-responsive"> 
                        </a>                  
              </div>
          }
    </div>

</div>


